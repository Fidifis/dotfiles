[alias]
	ll = log --oneline --graph --all --decorate --color=always --format='%C(auto)%h%d %s %C(green)(%an)'
	st = status
	cm = commit
	cma = commit -a
	cmm = commit -m
	cmma = commit -am
	ch = checkout
	br = branch
[init]
	defaultBranch = main
[pull]
	rebase = false

# Delta
[core]
    pager = delta
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true    # use n and N to move between diff sections
[merge]
    conflictstyle = diff3
[diff]
    colorMoved = default
